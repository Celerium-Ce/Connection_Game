<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ClientController">
    <top>
        <VBox spacing="10">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 1;">
                <Label text="Host:" />
                <TextField fx:id="hostField" prefWidth="130" text="localhost" />
                <Label text="Port:" />
                <TextField fx:id="portField" prefWidth="70" text="5000" />
                <Button fx:id="connectBtn" onAction="#onConnect" text="Connect" />
                <Button fx:id="disconnectBtn" onAction="#onDisconnect" text="Disconnect" />
                <Separator orientation="VERTICAL" />
                <Label text="Name:" />
                <TextField fx:id="nameField" prefWidth="130" promptText="Enter your name" />
                <Button fx:id="joinBtn" disable="true" onAction="#onJoin" text="JOIN" />
                <Separator orientation="VERTICAL" />
                <Label text="Status:" />
                <Label fx:id="statusLabel" text="Disconnected" />
                <Label fx:id="timerLabel" text="" style="-fx-font-weight: bold; -fx-text-fill: darkorange; -fx-padding: 0 6 0 6;" visible="false" />
                <Button onAction="#onQuit" text="Quit" />
            </HBox>
            
        </VBox>
    </top>
    
    <center>
        <HBox spacing="0">
            <VBox prefWidth="500" spacing="10" style="-fx-padding: 10; -fx-border-color: #ccc; -fx-border-width: 0 1 0 0;">
                
                <VBox fx:id="lobbyPanel" managed="false" spacing="10" style="-fx-padding: 10; -fx-border-color: #999; -fx-border-width: 1;" visible="false">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="GAME LOBBY" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="readyBtn" disable="true" onAction="#onReady" text="Ready" />
                        <Label fx:id="readyStatusLabel" text="Click Ready when you're ready to play" />
                    </HBox>
                    <VBox spacing="5" style="-fx-padding: 5; -fx-border-color: #ccc; -fx-border-width: 1;">
                        <Label style="-fx-font-weight: bold;" text="Connected Players:" />
                        <TextArea fx:id="playerListArea" editable="false" prefRowCount="6" style="-fx-font-family: 'Consolas', monospace;" wrapText="true" />
                    </VBox>
                </VBox>
                
                <VBox fx:id="gamePanel" managed="false" spacing="10" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 8; -fx-border-color: #999; -fx-border-width: 1;">
                        <Label text="Role:" />
                        <Label fx:id="roleLabel" style="-fx-font-weight: bold;" text="-" />
                        <Separator orientation="VERTICAL" />
                        <Label text="Prefix:" />
                        <Label fx:id="prefixLabel" style="-fx-font-weight: bold; -fx-font-family: monospace;" text="-" />
                        <Separator orientation="VERTICAL" />
                        <Label text="Lives:" />
                        <Label fx:id="livesLabel" style="-fx-font-weight: bold;" text="-" />
                        <Separator orientation="VERTICAL" />
                        <Label text="Defender:" />
                        <Label fx:id="aLabel" style="-fx-font-weight: bold;" text="-" />
                    </HBox>
                    
                    <VBox fx:id="roleAPanel" managed="false" spacing="10" style="-fx-padding: 10; -fx-border-color: #999; -fx-border-width: 1;" visible="false">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Role A - Defender" />
                        <VBox spacing="5">
                            <Label text="Set Secret Word:" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <TextField fx:id="secretField" prefWidth="200" promptText="Enter secret word" />
                                <Button fx:id="setSecretBtn" onAction="#onSetSecret" text="Set Secret" />
                            </HBox>
                        </VBox>
                        <Separator />
                        <Label style="-fx-font-size: 11px;" text="During connection window, guess what B is trying to communicate:" />
                        <VBox spacing="5">
                            <Label text="Your Guess:" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <TextField fx:id="guessFieldA" prefWidth="200" promptText="Your guess" />
                                <Button fx:id="guessBtn" disable="true" onAction="#onGuess" text="Submit Guess" />
                            </HBox>
                        </VBox>
                    </VBox>
                    
                    <VBox fx:id="roleBPanel" managed="false" spacing="10" style="-fx-padding: 10; -fx-border-color: #999; -fx-border-width: 1;" visible="false">
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Role B - Communicator" />
                        <VBox spacing="5">
                            <Label text="Start a Hint:" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <VBox spacing="3">
                                    <Label style="-fx-font-size: 11px;" text="Public Hint:" />
                                    <TextField fx:id="hintPublicField" prefWidth="150" promptText="hint visible to A" />
                                </VBox>
                                <VBox spacing="3">
                                    <Label style="-fx-font-size: 11px;" text="Intended Word:" />
                                    <TextField fx:id="hintIntendedField" prefWidth="130" promptText="what you're hinting" />
                                </VBox>
                                <Button fx:id="startHintBtn" disable="true" onAction="#onStartHint" text="Start Hint" />
                            </HBox>
                        </VBox>
                        <Separator />
                        <VBox spacing="5">
                            <Button fx:id="connectBtn2" disable="true" onAction="#onConnectAttempt" text="CONNECT (Press when you understand a hint)" />
                        </VBox>
                        <VBox spacing="5">
                            <Label text="Your Guess:" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <TextField fx:id="guessFieldB" prefWidth="200" promptText="guess during connection" />
                                <Button fx:id="guessBtnB" disable="true" onAction="#onGuess" text="Submit Guess" />
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
            
            <VBox HBox.hgrow="ALWAYS" spacing="10" style="-fx-padding: 10;">
                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold;" text="Game History" />
                    <TextArea fx:id="historyArea" editable="false" VBox.vgrow="ALWAYS" style="-fx-font-family: 'Consolas', monospace;" wrapText="true" />
                </VBox>
            </VBox>
            
        </HBox>
    </center>
</BorderPane>
